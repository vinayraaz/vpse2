<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Ll_normal_vtl">

    <LinearLayout
        style="@style/Ll_normal_htl"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp70"
        android:layout_margin="@dimen/dp2"
        android:background="@drawable/card_bg">

        <ImageView
            android:id="@+id/ll_attendance"
            style="@style/imgview_bothmatchcontent"
            android:layout_width="@dimen/dp5"
            android:layout_margin="@dimen/dp1"
            android:background="@color/white" />


        <LinearLayout
            style="@style/Ll_weight_htl"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:baselineAligned="false">

            <LinearLayout
                style="@style/Ll_weight_htl"
                android:layout_height="match_parent"

                android:layout_weight="0.6"
                tools:ignore="NestedWeights">

                <ImageView
                    android:id="@+id/ivProfilePicture"
                    style="@style/imgview_55dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:background="@drawable/card_design"
                    android:contentDescription="@string/image"
                    tools:ignore="RtlHardcoded" />


            </LinearLayout>

            <LinearLayout
                style="@style/Ll_weight_vtl"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvName"
                    style="@style/tv_normal"
                    android:layout_marginTop="@dimen/dp2"
                    android:gravity="center|top"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold"
                    android:text="abhishek_gupta" />

                <TextView
                    android:id="@+id/tv_att_Class"
                    style="@style/tv_normal"
                    android:layout_marginTop="@dimen/dp2"
                    android:gravity="center|top"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sp13"
                    android:textStyle="normal"
                    android:visibility="gone"
                    android:text="abhishek_gupta" />

                <TextView
                    android:id="@+id/tv_att_Section"
                    style="@style/tv_normal"
                    android:layout_marginTop="@dimen/dp2"
                    android:gravity="center|top"
                    android:visibility="gone"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sp13"
                    android:textStyle="normal"
                    android:text="abhishek_gupta" />

                <TextView
                    android:id="@+id/tvIdNumber"
                    style="@style/tv_normal"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="vs017bh0007" />



            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/Ll_weight_htl"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                style="@style/cardViewStyle"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp5"
                app:cardBackgroundColor="#f0ecef"
                app:cardCornerRadius="@dimen/dp5">

                <LinearLayout
                    style="@style/Ll_normal_htl"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/ll_present"
                        style="@style/Ll_weight_htl"

                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/btnPresent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="P"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="@color/trans_gray"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/sp22" />

                    </LinearLayout>


                    <LinearLayout
                        style="@style/Ll_weight_htl"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp2">



                        <TextView
                            android:id="@+id/btnAbsent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="A"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:background="@color/trans_gray"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/sp22" />

                    </LinearLayout>


                </LinearLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>