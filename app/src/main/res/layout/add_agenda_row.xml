<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dp5"
    android:background="#EAF1F5"
    android:id="@+id/ll_agenda_row">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp4"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_fromTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp14"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dash"/>

        <TextView
            android:id="@+id/tv_toTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp14"/>

    </LinearLayout>

    <View
        android:layout_width="@dimen/dp5"
        android:layout_height="match_parent"
        android:background="@color/barrier_green_colorPrimary"
        android:layout_marginTop="@dimen/dp4"
        android:layout_marginBottom="@dimen/dp4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="@dimen/dp10"
                android:layout_height="@dimen/dp10"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp2"
                android:background="@drawable/circle_solid_green"
                android:contentDescription="@string/description" />

            <TextView
                android:id="@+id/tv_agenda_title"
                android:textSize="@dimen/sp14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:text="@string/introduction_to_participant"
                android:layout_marginStart="@dimen/dp5" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_description"
            android:textSize="@dimen/sp14"
            android:layout_marginLeft="@dimen/dp19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:layout_marginStart="@dimen/dp19" />

    </LinearLayout>

</LinearLayout>