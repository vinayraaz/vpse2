<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="@dimen/dp5"
    app:cardElevation="@dimen/dp5"
    android:layout_margin="@dimen/dp5"
    android:orientation="vertical"
    android:id="@+id/cardRow"
    tools:ignore="RtlHardcoded,RtlSymmetry,SmallSp,ContentDescription,NestedWeights,HardcodedText,UselessParent,UseCompoundDrawables,DisableBaselineAlignment,UnusedAttribute,InefficientWeight">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="35dp"
            android:orientation="horizontal"
            android:layout_margin="@dimen/dp2">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:gravity="center|left"
                android:text="Class 1"
                android:paddingLeft="10dp"
                android:textColor="@color/drak_grey"
                style="@style/text_big_large"/>
            <TextView
                android:id="@+id/tv_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:gravity="center"
                android:text=" 1"
                android:paddingRight="15dp"
                android:textColor="@color/drak_grey"
                style="@style/text_big_large"/>
        </LinearLayout>

        <CheckBox
            android:id="@+id/check_box"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:button="@null" />

    </RelativeLayout>

</android.support.v7.widget.CardView>