<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

   <Button
       android:id="@+id/bt_homework_barrier"
       android:layout_width="match_parent"
       android:layout_height="30dp"
       android:background="@drawable/btn_round_shape_green"
       android:layout_margin="@dimen/dp10"
       android:text="Homework Barrier"
       android:textColor="@color/white"
       android:textAllCaps="false"/>

    <Button
        android:id="@+id/bt_homework_create"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp30"
        android:background="@drawable/btn_round_shape_green"
        android:layout_margin="@dimen/dp10"
        android:text="Homework Create"
        android:textColor="@color/white"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/bt_homework_inbox"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp30"
        android:background="@drawable/btn_round_shape_green"
        android:layout_margin="@dimen/dp10"
        android:text="Homework Inbox"
        android:textColor="@color/white"
        android:textAllCaps="false"/>

</LinearLayout>