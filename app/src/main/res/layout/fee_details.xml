<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        android:layout_below="@+id/cust_tool"
        android:layout_marginBottom="@dimen/dp50">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:minHeight="@dimen/dp45"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fee_structure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp5"
            android:layout_weight=".2"
            android:background="@color/green"
            android:gravity="center"
            android:text="Fee \n Structure"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/add_fee"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp1"
            android:layout_weight=".2"
            android:background="@color/white"
            android:gravity="center"
            android:text="Add\nFees"
            android:textColor="@color/drak_grey"
            android:textSize="13sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp1"
            android:layout_weight=".2"
            android:background="@color/white"
            android:gravity="center"
            android:text="Fee Structure"
            android:textColor="@color/drak_grey"
            android:textSize="13sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp1"
            android:layout_weight=".2"
            android:background="@color/white"
            android:gravity="center"
            android:text="Fee Structure"
            android:textColor="@color/drak_grey"
            android:textSize="13sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp1"
            android:layout_weight=".2"
            android:background="@color/white"
            android:gravity="center"
            android:text="Fee Structure"
            android:textColor="@color/drak_grey"
            android:textSize="13sp" />


    </LinearLayout>

</RelativeLayout>