<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorLight"
    android:id="@+id/ll_row"
    android:layout_marginTop="@dimen/dp5"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp35"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_classSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp12"
            android:text="Class &amp; Section"/>

        <TextView
            android:id="@+id/tv_teacherName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp12"
            android:text="Teacher Name"/>

        <TextView
            android:id="@+id/tv_teacherId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp12"
            android:text="Id"/>

        <ImageView
            android:id="@+id/iv_action"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp12"
            android:text="Action"
            android:src="@drawable/ic_cancel_red"/>

    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="#E7E5E5"
        android:layout_marginTop="@dimen/dp2"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginEnd="@dimen/dp10"/>



</LinearLayout>
