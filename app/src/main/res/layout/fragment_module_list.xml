<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Ll_both_match_heading"
    android:orientation="vertical"
    android:background="@color/barrier_green_colorPrimaryDark">

    <!-- TODO: Update blank fragment layout -->


    <android.support.v7.widget.Toolbar
        style="@style/Toolbar">

        <ImageView
            android:id="@+id/iv_backBtn"
            style="@style/imgvw_normal"
            android:src="@drawable/ic_modules"
            android:layout_gravity="start"
            android:contentDescription="@string/backgroung" />


        <TextView
             style="@style/tv_normal"
             android:text="@string/select_module"
             android:textSize="@dimen/sp19"
             android:layout_gravity="center"
             android:textColor="@color/colorWhite"/>

        <ImageView
            android:id="@+id/iv_downloadList"
            style="@style/Image_View"
            android:src="@drawable/ic_file_download_black_24dp"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dp5"
            android:contentDescription="@string/backgroung" />

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_SelectModules"
        android:layout_height="@dimen/dp0"
        android:layout_weight="1"
        style="@style/recyclerViewStyle"
        android:background="@drawable/card_design" />


    <LinearLayout
        android:layout_height="0dp"
        style="@style/Ll_normal_htl"
        android:layout_weight="0.08"
        android:background="#f1eded">



        <Button
            android:id="@+id/btnSaveSelectedModule"
            android:layout_height="match_parent"
            style="@style/button_normal_weight"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_marginTop="@dimen/dp5"
            android:text="@string/save"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            android:background="@drawable/btn_round_shape_green"/>


        <Button
            android:id="@+id/btnSelectAll"
            android:layout_height="match_parent"
            style="@style/button_normal_weight"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_marginTop="@dimen/dp5"
            android:text="@string/select_all"
            android:textColor="@color/colorBlack"
            android:background="@drawable/btn_round_shape_grey"/>

    </LinearLayout>


</LinearLayout>
