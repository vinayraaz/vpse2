<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp30"
        android:text="Update House"

        android:gravity="center|left"
        android:paddingLeft="@dimen/dp15"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/ic_popup_green"
        android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etHouseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinnerbackground_two"
                android:hint="Enter House Name"
                android:padding="5dp"
                android:inputType="text"
                android:layout_marginTop="@dimen/dp5"
                android:paddingLeft="@dimen/dp20"
                android:focusableInTouchMode="true"
                tools:ignore="Autofill,TextFields" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:minHeight="@dimen/dp35"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp10"
                    android:text="Select Teacher" />
                <Spinner
                    android:id="@+id/sp_teacher1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:background="@drawable/spinnerbackground"
                    android:layout_margin="@dimen/dp1" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:minHeight="@dimen/dp35"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp10"
                    android:text="Select Caption" />


                <Spinner
                    android:id="@+id/sp_Caption"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:background="@drawable/spinnerbackground"
                    android:layout_margin="@dimen/dp1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:minHeight="@dimen/dp35"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp10"
                    android:text="Select Vice Caption" />

                <Spinner
                    android:id="@+id/sp_ViceCaption"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:background="@drawable/spinnerbackground"
                    android:layout_margin="@dimen/dp1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:minHeight="@dimen/dp35"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp10"
                    android:text="Select House Color" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:background="@drawable/spinnerbackground"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvcolorcode"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:padding="5dp"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:minHeight="@dimen/dp35"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp10"
                    android:text="No of Student" />

                <EditText
                    android:id="@+id/ed_studentNo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:background="@drawable/spinnerbackground_two"
                    android:hint="Enter Student No"
                    android:padding="5dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:focusableInTouchMode="true"
                    android:textSize="14sp"
                    tools:ignore="Autofill,TextFields" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dp20"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_round_shape_red"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/white" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_round_shape_green"
                android:gravity="center"
                android:text="Update"
                android:textColor="@color/white" />
        </LinearLayout>

</LinearLayout>


</LinearLayout>