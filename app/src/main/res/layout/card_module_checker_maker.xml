<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Ll_normal_vtl">

    <LinearLayout
        style="@style/Ll_normal_htl"
        android:layout_height="@dimen/dp35"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginStart="@dimen/dp5"
        android:layout_marginEnd="@dimen/dp5"
        android:background="@drawable/recycler_chmamo">

        <TextView
            android:layout_width="match_parent"
            style="@style/tv_normal"
            android:text="@string/module_name"
            android:id="@+id/module"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp5"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        style="@style/cardViewStyle"
        android:layout_marginStart="@dimen/dp5"
        android:layout_marginEnd="@dimen/dp5">

        <LinearLayout
            style="@style/Ll_normal_htl">

            <LinearLayout
                android:layout_height="match_parent"
                style="@style/Ll_weight_vtl"
                android:layout_marginEnd="@dimen/dp5"
                android:background="@color/backgroundColor2">

                <TextView
                    style="@style/tv_normal"
                    android:text="@string/maker"
                    android:layout_gravity="center"
                    android:textSize="@dimen/sp16"/>

                <View
                    android:layout_width="@dimen/dp40"
                    style="@style/view_horizantal"
                    android:layout_gravity="center"
                    android:background="@color/colorBlack"/>


                <TextView
                    android:id="@+id/maker"
                    style="@style/tv_normal"
                    android:layout_gravity="center"
                    android:text="@string/maker" />



            </LinearLayout>





            <LinearLayout
                android:layout_height="match_parent"
                style="@style/Ll_weight_vtl"
                android:background="@color/backgroundColor2">

                <TextView
                    style="@style/tv_normal"
                    android:text="@string/checker"
                    android:layout_gravity="center"
                    android:textSize="@dimen/sp16"/>

                <View
                    style="@style/view_horizantal"
                    android:layout_gravity="center"
                    android:background="@color/colorBlack"/>


                <TextView
                    android:id="@+id/checker"
                    style="@style/tv_normal"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="@string/checker"
                    tools:ignore="InefficientWeight" />

            </LinearLayout>




        </LinearLayout>



    </android.support.v7.widget.CardView>





</LinearLayout>