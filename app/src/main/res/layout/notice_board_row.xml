<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_row"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_shortName"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:layout_margin="@dimen/dp5"
        android:text="NB"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/sp16"
        android:gravity="center"
        android:background="@drawable/circle_select"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp16"
            android:textStyle="bold"
            android:text="Title"/>

        <TextView
            android:id="@+id/tv_message"
            android:textSize="@dimen/sp14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/hintColor"
            android:text="Title"/>

        <LinearLayout
            android:id="@+id/date_displayer"
            style="@style/Ll_normal_htl"
            android:visibility="gone">

            <LinearLayout
                style="@style/Ll_weight_htl"
                android:layout_margin="@dimen/dp5">

                <RelativeLayout
                    android:id="@+id/leave_layout_start_date"
                    style="@style/Rl_normal"
                    android:background="@drawable/shape4">

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp30"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="@dimen/dp30"
                        android:layout_marginRight="@dimen/dp30"
                        android:gravity="center"
                        android:padding="@dimen/dp5"
                        android:text="@string/from_date" />

                    <ImageView
                        style="@style/imgvw_normal"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/dp1"
                        android:background="@drawable/backgroung"
                        android:padding="@dimen/dp5"
                        android:src="@drawable/ic_date_range_black_24dp"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/image"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/Ll_weight_htl"
                android:layout_margin="@dimen/dp5">

                <RelativeLayout
                    android:id="@+id/leave_layout_to_date"
                    style="@style/Rl_normal"
                    android:background="@drawable/shape4">

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp30"
                        android:layout_marginEnd="@dimen/dp30"
                        android:layout_marginRight="@dimen/dp30"
                        android:gravity="center"
                        android:padding="@dimen/dp5"
                        android:text="@string/to_date" />

                    <ImageView
                        style="@style/imgvw_normal"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/dp1"
                        android:background="@drawable/backgroung"
                        android:padding="@dimen/dp5"
                        android:src="@drawable/ic_access_time_black_24dp"
                        tools:ignore="RtlHardcoded"
                        android:contentDescription="@string/image"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp12"
                android:visibility="gone"
                android:text="@string/date"/>

            <TextView
                android:id="@+id/tv_dateView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp12"
                android:text="@string/date"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>