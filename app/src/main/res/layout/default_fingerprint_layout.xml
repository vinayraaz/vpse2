<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Ll_both_match_heading"
    android:background="@android:color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_height="@dimen/dp0"
        android:layout_weight="1"
        style="@style/Ll_normal_htl">

        <LinearLayout
            style="@style/Ll_normal_htl"
            android:layout_height="@dimen/dp150"
            android:layout_marginBottom="@dimen/dp5">

            <RelativeLayout
                style="@style/Rl_both_matchparent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    style="@style/imgvw_normal"
                    android:layout_height="@dimen/dp120"
                    android:background="@drawable/background_shape"
                    android:contentDescription="@string/backgroung" />

                <in.varadhismartek.patashalaerp.GeneralClass.CircleImageView
                    android:layout_width="@dimen/dp80"
                    android:layout_height="@dimen/dp80"
                    style="@style/circleimagevw_normal"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    app:civ_border_width="@dimen/dp2"
                    app:civ_border_color="#f94301"
                    app:civ_border_overlay="true"
                    android:background="@drawable/ic_use" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0"
        android:layout_weight="1.0">

        <android.support.v7.widget.CardView
            style="@style/cardViewStyle"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_marginEnd="@dimen/dp40"
            android:layout_marginStart="@dimen/dp40"
            android:layout_marginTop="@dimen/dp5"
            app:cardCornerRadius="@dimen/dp5"
            app:cardElevation="@dimen/dp5">

            <LinearLayout
                android:id="@+id/linaerLayout_labelPin"
                style="@style/Ll_normal_vtl"
                android:baselineAligned="false">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    style="@style/Ll_weight_vtl"
                    tools:ignore="Suspicious0dp">

                    <TextView
                        style="@style/tv_normal"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp5"
                        android:text="@string/login_with_fingerprint"
                        android:textColor="#3b97b9"
                        android:textSize="@dimen/sp17"
                        android:layout_marginTop="@dimen/dp5"/>

                    <View
                        style="@style/view_horizantal_heightwrapcontent"
                        android:layout_marginTop="@dimen/dp5"
                        android:background="#dfdddd" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    style="@style/Ll_normal_htl"
                    tools:ignore="Suspicious0dp,UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/ivFingerAuth"
                        style="@style/Image_View"
                        android:background="@drawable/fpbox"
                        android:layout_marginStart="@dimen/dp15"
                        android:padding="@dimen/dp15"
                        android:layout_gravity="center"
                        android:src="@drawable/finger_print"
                        android:contentDescription="@string/finger_print" />


                    <TextView
                        style="@style/tv_normal"
                        android:text="@string/touch_sensor"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp20"
                        android:textSize="@dimen/sp17"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    style="@style/Ll_normal_vtl"
                    android:gravity="center"
                    tools:ignore="Suspicious0dp">

                    <View
                        android:id="@+id/view_line_finger"
                        style="@style/view_horizantal_heightwrapcontent"
                        android:background="#dfdddd" />

                    <TextView
                        android:id="@+id/tv_UseMpin"
                        style="@style/tv_normal"
                        android:layout_gravity="center"
                        android:text="@string/use_mpin"
                        android:textColor="#3b97b9"
                        android:textSize="@dimen/sp17"
                        android:layout_marginTop="@dimen/dp5"/>

                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/Rl_normal"
            tools:ignore="UselessParent">

            <ImageView
                style="@style/imgview_bothmatchcontent"
                android:layout_height="@dimen/dp100"
                android:layout_alignParentBottom="true"
                android:background="@drawable/wave_orange"
                android:contentDescription="@string/backgroung" />


        </RelativeLayout>



    </LinearLayout>


</LinearLayout>