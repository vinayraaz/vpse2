<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dp2"
    android:background="@drawable/sample_background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:background="@drawable/ic_popup"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/dp10"
            android:text="House Details"
            android:gravity="center|left"
            android:textSize="18sp"/>


    </LinearLayout>




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp2"

        android:elevation="@dimen/dp8"
        app:cardElevation="@dimen/dp10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp0"
            android:background="@drawable/marks_bg"
            android:minHeight="@dimen/dp100"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:gravity="center"
                android:minHeight="@dimen/dp30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/sp10"
                    android:text="House Name :"
                    android:textColor="@color/drak_grey"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_house_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/sp10"
                    android:textColor="@color/drak_grey"
                    android:textSize="15sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:gravity="center"
                android:minHeight="@dimen/dp30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/sp10"
                    android:text="House ID :"
                    android:textColor="@color/drak_grey"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_house_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/sp10"
                    android:textColor="@color/drak_grey"
                    android:textSize="15sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:gravity="center"
                android:minHeight="@dimen/dp30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/sp10"
                    android:text="House Color :"
                    android:textColor="@color/drak_grey"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_house_color"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/sp10"
                    android:textColor="@color/drak_grey"
                    android:textSize="15sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:gravity="center"
                android:minHeight="@dimen/dp30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/sp10"
                    android:text="No of Students :"
                    android:textColor="@color/drak_grey"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_noof_student"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/sp10"
                    android:textColor="@color/drak_grey"
                    android:textSize="15sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:gravity="center"
                android:minHeight="@dimen/dp30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/sp10"
                    android:text="Mentor Name :"
                    android:textColor="@color/drak_grey"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvMentore"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/sp10"
                    android:textColor="@color/drak_grey"
                    android:textSize="15sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:gravity="center"
                android:minHeight="@dimen/dp30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/sp10"
                    android:text="Caption Name :"
                    android:textColor="@color/drak_grey"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvcaption"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/sp10"
                    android:textColor="@color/drak_grey"
                    android:textSize="15sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:gravity="center"
                android:minHeight="@dimen/dp30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/sp10"
                    android:text="Vice Caption Name :"
                    android:textColor="@color/drak_grey"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvVcaption"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/sp10"
                    android:textColor="@color/drak_grey"
                    android:textSize="15sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/ll_cancel"
                android:layout_width="@dimen/dp120"
                android:layout_height="30dp"
                android:layout_weight=".5"
                android:layout_gravity="right"
                android:text="Close"
                android:layout_marginBottom="@dimen/dp10"
                android:gravity="center"
                android:paddingLeft="@dimen/sp10"
                android:textColor="@color/white"
                android:background="@drawable/btn_round_shape_green"
                android:textSize="15sp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
