<LinearLayout android:id="@+id/ll_health_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp5"
        app:cardCornerRadius="@dimen/dp5"
        app:cardElevation="@dimen/dp5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_rect"
            android:paddingBottom="@dimen/dp5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_docsName"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="@dimen/dp20"
                android:layout_margin="@dimen/dp5"
                android:text="Docs Name"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/colorPrimaryDark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bottom"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp5">

                    <TextView
                        android:id="@+id/tv_docsNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Docs No"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bottom"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp5">

                    <ImageView
                        android:id="@+id/iv_docsOne"
                        android:layout_width="@dimen/dp50"
                        android:layout_height="@dimen/dp50"
                        android:src="@drawable/border"
                        android:layout_margin="@dimen/dp2"
                        android:scaleType="fitXY"/>

                    <ImageView
                        android:id="@+id/iv_docsTwo"
                        android:layout_width="@dimen/dp50"
                        android:layout_height="@dimen/dp50"
                        android:src="@drawable/border"
                        android:layout_margin="@dimen/dp2"
                        android:scaleType="fitXY"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
