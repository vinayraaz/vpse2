<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/dp30">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp35"
        android:text="Update Name"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp10"
        android:background="@drawable/ic_popup_green"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp10"
        android:background="@color/white">

        <!-- Wings Row -->

        <LinearLayout
            android:id="@+id/ll_wing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp10"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wings Name: "
                android:textStyle="bold"
                android:textSize="@dimen/sp14"/>

            <TextView
                android:id="@+id/tv_wing_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Win-1"
                android:layout_margin="@dimen/dp5"
                android:textSize="@dimen/sp14"/>

        </LinearLayout>

        <!-- Department Row -->

        <LinearLayout
            android:id="@+id/ll_dept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp10"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department Name: "
                android:textStyle="bold"
                android:textSize="@dimen/sp14"/>

            <TextView
                android:id="@+id/tv_dept_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Win-1"
                android:layout_margin="@dimen/dp5"
                android:textSize="@dimen/sp14"/>

        </LinearLayout>

        <!-- New Value input row -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp10"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Old Name: "
                android:textStyle="bold"
                android:textSize="@dimen/sp14"/>

            <TextView
                android:id="@+id/tv_heading_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name "
                android:layout_margin="@dimen/dp5"
                android:textSize="@dimen/sp14"/>

        </LinearLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10">

            <EditText
                android:id="@+id/et_new_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp14" />

        </android.support.design.widget.TextInputLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingTop="@dimen/dp10">

        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30"
            android:layout_weight="1"
            android:text="Cancel"
            android:layout_margin="@dimen/dp5"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/btn_round_shape_red"/>

        <Button
            android:id="@+id/bt_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30"
            android:layout_weight="1"
            android:text="Update"
            android:layout_margin="@dimen/dp5"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/btn_round_shape_green"/>

    </LinearLayout>


</LinearLayout>