<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/linearLayout_Normal_Vertical"
   >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp2"
        android:layout_margin="@dimen/dp3">
        <LinearLayout
            style="@style/linearLayout_Normal_Vertical">

            <LinearLayout
                style="@style/linearLayout_H_wrap">


                <TextView
                    style="@style/tv_normal"
                    android:layout_weight="1"
                    android:text="@string/events_amp_schedule"
                    android:layout_margin="@dimen/dp5"
                    android:textSize="@dimen/sp12"
                    android:padding="@dimen/dp5"
                    tools:ignore="InefficientWeight" />

                <ImageView
                    style="@style/imageViewNormal"
                    android:layout_margin="@dimen/dp5"
                    android:src="@drawable/ic_down_key_fill"
                    android:contentDescription="@string/image" />

                <ImageView
                    style="@style/imageView_NormalWH20"
                    android:layout_margin="@dimen/dp5"
                    android:src="@drawable/ic_sync_black_24dp"
                    android:contentDescription="@string/image"/>

                <ImageView
                    style="@style/imageView_NormalWH20"
                    android:layout_margin="@dimen/dp5"
                    android:src="@drawable/ic_close_black_24dp"
                    android:contentDescription="@string/image"/>


            </LinearLayout>
            <View
                style="@style/view_horizantal_H1WM"
                android:background="@color/backgroundColor2"/>
            <in.varadhismartek.patashalaerp.DashboardModule.calenderView.CustomCalendarView
                android:id="@+id/custom_calendar"
                android:layout_width="match_parent"
                android:layout_height="280dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>







</LinearLayout>