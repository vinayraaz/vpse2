<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DashboardModule.Assessment.ExamActivity">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:id="@+id/ll_assessment_exam"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rect_boarder"
        android:elevation="@dimen/dp5"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_exam"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp2"
            android:layout_weight=".33"
            android:background="@color/green"
            android:gravity="center"
            android:text="Exam"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_examBarriers"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp2"
            android:layout_weight=".33"
            android:gravity="center"
            android:text="Barriers"
            android:textColor="@color/drak_grey"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_grade"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp2"
            android:layout_weight=".33"
            android:gravity="center"
            android:text="Grade"
            android:textColor="@color/drak_grey"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_assessment_sport"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rect_boarder"
        android:elevation="@dimen/dp5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sport"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp2"
            android:layout_weight=".5"
            android:background="@color/green"
            android:gravity="center"
            android:text="Sports"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_sportBarrier"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp2"
            android:layout_weight=".5"
            android:gravity="center"
            android:text="Barriers"
            android:textColor="@color/drak_grey"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

</RelativeLayout>