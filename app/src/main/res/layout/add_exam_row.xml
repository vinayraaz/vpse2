<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dp5">

    <TextView
        android:id="@+id/tv_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Subject"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_marginStart="@dimen/dp5" />

    <LinearLayout
        android:id="@+id/date_displayer"
        android:padding="@dimen/dp5"
        style="@style/Ll_normal_htl"
        android:background="#f5f5f5">

        <LinearLayout
            style="@style/Ll_weight_htl"
            android:layout_margin="@dimen/dp5">

            <RelativeLayout
                android:id="@+id/rl_fromDate"
                style="@style/Rl_normal"
                android:background="@drawable/shape4">

                <TextView
                    android:id="@+id/tv_add_date"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp35"
                    android:layout_marginEnd="@dimen/dp30"
                    android:layout_marginRight="@dimen/dp30"
                    android:gravity="center"
                    android:padding="@dimen/dp5"
                    android:text="@string/date" />

                <ImageView
                    style="@style/imgvw_normal"
                    android:layout_height="34dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dp1"
                    android:background="@drawable/maker_submit"
                    android:padding="@dimen/dp5"
                    android:src="@drawable/ic_date_range_black_24dp"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/description" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/Ll_weight_htl"
            android:layout_margin="@dimen/dp5">

            <RelativeLayout
                android:id="@+id/rl_toDate"
                style="@style/Rl_normal"
                android:background="@drawable/shape4">

                <TextView
                    android:id="@+id/tv_add_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp35"
                    android:layout_marginEnd="@dimen/dp30"
                    android:layout_marginRight="@dimen/dp30"
                    android:gravity="center"
                    android:padding="@dimen/dp5"
                    android:text="Time" />

                <ImageView
                    style="@style/imgvw_normal"
                    android:layout_height="34dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dp1"
                    android:background="@drawable/maker_submit"
                    android:padding="@dimen/dp5"
                    android:src="@drawable/ic_access_time_black_24dp"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/description" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>