<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp1"
        android:background="@drawable/card_bg"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:text="House Update"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp10"
            android:textColor="@color/white"
            android:background="@drawable/ic_popup"
            android:paddingStart="@dimen/dp10"
            tools:ignore="RtlSymmetry" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etHouseName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:layout_weight=".5"
                android:background="@drawable/spinnerbackground_two"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:hint="Enter House Name"
                android:inputType="textCapWords"
                android:padding="5dp"
                android:paddingLeft="@dimen/dp20"
                tools:ignore="Autofill,TextFields" />

            <Spinner
                android:id="@+id/tvcolorcode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp1"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:layout_weight=".5"
                android:background="@drawable/spinnerbackground"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:minHeight="@dimen/dp45"
            android:orientation="horizontal"
            android:visibility="visible">

            <Spinner
                android:id="@+id/sp_teacher1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp5"
                android:layout_weight=".5"
                android:background="@drawable/spinnerbackground" />

            <Spinner
                android:id="@+id/sp_Caption"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp5"
                android:layout_weight=".5"
                android:background="@drawable/spinnerbackground"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp50"
            android:orientation="horizontal"
            android:visibility="visible">

            <Spinner
                android:id="@+id/sp_ViceCaption"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp5"
                android:layout_weight=".5"
                android:background="@drawable/spinnerbackground" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp5"
                android:layout_weight=".5"
                android:visibility="invisible"
                android:gravity="center"
                android:text="No of Student" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp35"
            android:gravity="right|center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp120"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp5"
                android:background="@drawable/btn_round_shape_green"
                android:gravity="center"
                android:text="Cancel"
                android:id="@+id/tvcancel"
                android:layout_marginRight="@dimen/dp20"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="@dimen/dp120"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp5"
                android:background="@drawable/btn_round_shape_green"
                android:gravity="center"
                android:id="@+id/tvadd"
                android:text="Submit"
                android:textColor="@color/white" />
        </LinearLayout>



        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvAddHouses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>


