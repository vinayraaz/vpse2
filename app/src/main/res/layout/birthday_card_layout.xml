<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp120"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/trans_green"
    android:layout_margin="@dimen/dp2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp10"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:alpha="0.2"
        android:background="@drawable/ic_flags"/>

    <ImageView
        android:layout_width="@dimen/dp80"
        android:layout_height="@dimen/dp80"
        android:layout_margin="@dimen/dp10"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_cake"
        android:alpha="0.6"/>

    <ImageView
        android:layout_width="@dimen/dp100"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp10"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:alpha="0.6"
        android:background="@drawable/ic_ballons"/>


    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp60"
        android:layout_height="@dimen/dp60"
        app:cardCornerRadius="@dimen/dp10"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp30">

        <in.varadhismartek.patashalaerp.GeneralClass.CircleImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_person_black_24dp"
            android:backgroundTint="@color/green"/>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shivam Gupta"
            android:textAllCaps="true"
            android:textSize="@dimen/sp18"
            android:padding="@dimen/dp5"
            android:textColor="@color/red"
            android:textStyle="italic|bold"/>

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:padding="@dimen/dp5"
            android:textStyle="italic"/>

    </LinearLayout>

</RelativeLayout>