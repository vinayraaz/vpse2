<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp2">

    <RelativeLayout
        android:id="@+id/rl_calendar_circle"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/calendar_date_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp12"
            android:layout_gravity="center"
            android:text="@string/last_date"/>

        <RelativeLayout
            android:id="@+id/event_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_below="@id/calendar_date_id"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/event_id_1"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_toLeftOf="@+id/event_id_2"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/event_id_2"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp2"
                android:layout_marginRight="@dimen/dp2"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/event_id_3"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_toRightOf="@+id/event_id_2"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>













































